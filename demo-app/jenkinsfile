pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    environment {
        DOCKER_IMAGE = "nithinsibi/demo-app"
        IMAGE_TAG    = "${BUILD_NUMBER}"
        GIT_BRANCH   = "main"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: "${GIT_BRANCH}",
                    url: 'https://github.com/nithinsibi-vairumuthu/java-micro.git'
            }
        }

        stage('Build & Test') {
            steps {
                dir('demo-app') {
                    sh 'mvn clean verify'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('demo-app') {
                    withSonarQubeEnv('sonar') {
                        withCredentials([string(
                            credentialsId: 'sonarqube-token',
                            variable: 'SONAR_TOKEN'
                        )]) {
                            sh """
                            mvn sonar:sonar \
                              -Dsonar.projectKey=java-micro \
                              -Dsonar.host.url=http://localhost:9005 \
                              -Dsonar.login=${SONAR_TOKEN}
                            """
                        }
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('demo-app') {
                    sh """
                    docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} .
                    """
                }
            }
        }

        stage('Docker Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                    echo "${DOCKER_PASS}" | docker login -u "${DOCKER_USER}" --password-stdin
                    docker push ${DOCKER_IMAGE}:${IMAGE_TAG}
                    docker logout
                    """
                }
            }
        }

        stage('Update Manifest for Argo CD') {
            steps {
                sh """
                sed -i 's|image:.*nithinsibi/demo-app.*|image: nithinsibi/demo-app:${IMAGE_TAG}|g' \
                demo-app/k8s/demoapp-deployment.yml

                git config user.email "jenkins@ci.com"
                git config user.name "jenkins"

                git add demo-app/k8s/demoapp-deployment.yml
                git commit -m "chore: update image tag to ${IMAGE_TAG}" || true
                git push origin ${GIT_BRANCH}
                """
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
