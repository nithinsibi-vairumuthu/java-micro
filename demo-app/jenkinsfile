pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    environment {
        DOCKER_IMAGE = "nithinsibi/demo-app"   // Change to your Docker Hub username/repo
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/nithinsibi-vairumuthu/java-micro.git'
            }
        }

        stage('Build & Test') {
            steps {
                dir('demo-app') {
                    sh 'mvn clean verify'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('demo-app') {
                    withSonarQubeEnv('sonar') {
                        withCredentials([string(
                            credentialsId: 'sonarqube-token',
                            variable: 'SONAR_TOKEN'
                        )]) {
                            sh """
                              mvn clean verify \
                              org.sonarsource.scanner.maven:sonar-maven-plugin:4.0.0.4121:sonar \
                              -Dsonar.projectKey=java-micro \
                              -Dsonar.host.url=http://localhost:9005 \
                              -Dsonar.login=$SONAR_TOKEN
                            """
                        }
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('demo-app') {
                    sh """
                      docker build \
                      -t $DOCKER_IMAGE:${BUILD_NUMBER} \
                      -t $DOCKER_IMAGE:${GIT_COMMIT} .
                    """
                }
            }
        }

        stage('Docker Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                      echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                      docker push $DOCKER_IMAGE:${BUILD_NUMBER}
                      docker push $DOCKER_IMAGE:${GIT_COMMIT}
                      docker logout
                    """
                }
            }
        }
stage('Deploy to Kubernetes') {
    steps {
        dir('k8s') {
            withCredentials([usernamePassword(
                credentialsId: 'dockerhub-creds',
                usernameVariable: 'DOCKER_USER',
                passwordVariable: 'DOCKER_PASS'
            )]) {
                sh """
                  # Replace BUILD_TAG placeholder with actual build number
                  sed -i "s/BUILD_TAG/${BUILD_NUMBER}/g" demoapp-deployment.yml
                  
                  # Apply deployment to K8s
                  kubectl apply -f demoapp-deployment.yml
                  
                  # Optional: rollout status check
                  kubectl rollout status deployment/demo-app
                """
                }
            }
        }
    } 
  } 
}